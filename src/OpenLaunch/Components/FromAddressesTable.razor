@using MudBlazor
@using OpenLaunch.Models
@using Align = MudBlazor.Align
@using Color = MudBlazor.Color
@using Size = MudBlazor.Size

<MudTable Items="FromAddresses" Dense="true" Hover="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Active From Addresses</MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>From Address</MudTh>
        <MudTh>Display Name</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Address</MudTd>
        <MudTd>@context.DisplayName</MudTd>
        <MudTd>
            <MudButton Size="Size.Small" Color="Color.Error" OnClick="(() => OnDelete.InvokeAsync(context))">Delete</MudButton>
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText Align="Align.Center" Class="px-4 py-1">
            No from addresses found.
        </MudText>
    </NoRecordsContent>
</MudTable>

@code {
    [Parameter] public List<FromAddress> FromAddresses { get; set; } = new();
    [Parameter] public EventCallback<FromAddress> OnDelete { get; set; }
}